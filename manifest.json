{
  "manifest_version": 2,
  "name": "My IPN",
  "description": "IPN 播客扩展",
  "version": "0.9",
  "content_scripts": [{
    "matches": [
      "*://ipn.li/*"
      ],
    "js": ["main.js"],
    "css": ["main.css"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "notifications",
    "storage",
    "alarms"
  ],
  "icons": {
    "16": "img/icons/icon16.png",
    "48": "img/icons/icon48.png",
    "128": "img/icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icons/icon48.png",
    "default_popup": "popup/popup.html"
  }
}
